<div class="card shadow m-3 p-0" style="width: 21rem;">

    <img src={{dishImg}} class="card-img-top text-center" alt="..." />
    <div class="card-body">
        <h2 class="card-title text-center">{{dishName}}</h2>
        <p class="card-text text-center">
          {{dishDesc}}
        </p>
    </div>


    <div class="form text-center">
          <label for="floatingEmptyPlaintextInput">
            <h3>${{dishPrice}}</h3>
          </label>
    </div>


    <div class="container text-center">
        <button type="button" class="btn btn-light plus">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
              class="bi bi-plus-square" viewBox="0 0 16 16">
              <path
                d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
              <path
                d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
            </svg>
      </button>

      <div class="form">
            <span class="quantity">0</span>
      </div>

      <button type="button" class="btn btn-light minus">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
              class="bi bi-dash-square" viewBox="0 0 16 16">
              <path
                d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
              <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z" />
            </svg>
      </button>
    </div>


    <div class="card-body container text-center">
      <button type="button" class="btn btn-success" data-id="{{id}}">Add to cart</button>
    </div>
</div>